<!-- app/views/tasks/edit.html.erb -->
<div class="container mt-5">
  <h1>Edit Task</h1>

  <%= form_with(model: @task, url: task_path(@task), method: :patch, class: 'mt-3') do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :details %>
      <%= form.text_area :details, class: 'form-control' %>
    </div>

    <div class="form-group form-check">
      <%= form.check_box :completed, class: 'form-check-input' %>
      <%= form.label :completed, class: 'form-check-label' %>
    </div>

    <%= form.submit 'Update Task', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', task_path(@task), class: 'btn btn-secondary' %>
  <% end %>
</div>
